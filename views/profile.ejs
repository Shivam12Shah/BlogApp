<%- include("./partials/header")%>

<%- include("./partials/nav")%>

<div class="w-[80%] h-[80vh] mx-auto flex flex-col items-center p-10">
    <div class="userdets flex gap-5 items-center justify-center">
        <div class="profileimg h-[150px] w-[150px] bg-red-500 rounded-full overflow-hidden">
            <img class="w-full h-full obeject-cover" src="<%=user.profile%>" alt="">
        </div>
        <div class="userdets">
            <h1 class="text-2xl font-semibold text-zinc-800"><%=user.fullname%></h1>
            <h1><%=user.email%></h1>
        </div>
    </div>
   
    <form action="/users/uploadimg/<%=user._id%>" method="post" enctype="multipart/form-data">
        <input type="file" placeholder="file de do bhaiya" name="avatar">
        <button>Submit</button>
    </form>
    <div class="allblogs ">
        <h1 class="text-2xl font-semibold">All Blogs</h1>

        
       <div class="allboag flex gap-3 flex-wrap my-10 justify-center    ">

        <%user.blogs.forEach((elm)=>{%>
           <a href="/blogdescription/2">
            <div class="singleblog w-[200px] h-[240px] bg-zinc-100 p-2 rounded">
                <div class="img w-full h-[85%] ">
                    <img class="w-full h-full obeject-cover" src="<%=elm.blogImage%>" alt="">
                </div>
                <div class="description">
                    <h1 class="text-xl pt-1 capitalize "><%=elm.title%></h1>
                </div>
            </div>
           </a>
            <%})%>


      
       </div>

    </div>
</div>

<a href="/users/logout">logout</a>

<%- include("./partials/footer")%>
